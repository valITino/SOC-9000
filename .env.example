# ===== SOC-9000 environment =====

# Host filesystem
LAB_ROOT=E:\SOC-9000
REPO_ROOT=E:\SOC-9000\SOC-9000
ISO_DIR=E:\SOC-9000\isos
ARTIFACTS_DIR=E:\SOC-9000\artifacts
TEMP_DIR=E:\SOC-9000\temp

# VMware networks (emulated VLANs)
VMNET_WAN=VMnet8
VMNET_MGMT=VMnet20
VMNET_SOC=VMnet21
VMNET_VICTIM=VMnet22
VMNET_RED=VMnet23

# Subnets
SUBNET_MGMT=172.22.10.0/24
SUBNET_SOC=172.22.20.0/24
SUBNET_VICTIM=172.22.30.0/24
SUBNET_RED=172.22.40.0/24

# pfSense interface IPs (gateways of each segment)
PFSENSE_MGMT_IP=172.22.10.1
PFSENSE_SOC_IP=172.22.20.1
PFSENSE_VICTIM_IP=172.22.30.1
PFSENSE_RED_IP=172.22.40.1

# Domain & TLS
LAB_DOMAIN=lab.local
TRAEFIK_ENABLED=true

# MetalLB pools (per segment)
METALLB_POOL_MGMT=172.22.10.50-172.22.10.99
METALLB_POOL_SOC=172.22.20.50-172.22.20.199
METALLB_POOL_VICTIM=172.22.30.50-172.22.30.199
METALLB_POOL_RED=172.22.40.50-172.22.40.199

# Runtime
K8S_RUNTIME=k3s
PORTAINER_ENABLED=true
KALI_CONTAINER_ENABLED=true
WINDOWS_VM_ENABLED=true
NESSUS_MODE=docker-first

# Credentials / keys
SSH_PUBLIC_KEY=C:\Users\%USERNAME%\.ssh\id_ed25519.pub
ADMIN_USERNAME=labadmin
ADMIN_PASSWORD=ChangeMe_S0C9000!
NESSUS_ACTIVATION_CODE=PUT-YOUR-CODE-HERE

# Sizing (VMs)
RAM_PFSENSE_MB=2048
CPU_PFSENSE=2
RAM_CONTAINERHOST_MB=16384
CPU_CONTAINERHOST=6
RAM_WIN_VICTIM_MB=8192
CPU_WIN_VICTIM=4

# ISO filenames (placed in ISO_DIR)
ISO_PFSENSE=pfsense.iso
ISO_UBUNTU=ubuntu-22.04.iso
ISO_WINDOWS=win11-eval.iso
# --- Chunk 3 additions ---
# Static IPs for ContainerHost
CH_IP_MGMT=172.22.10.10
CH_IP_SOC=172.22.20.10
CH_IP_VICTIM=172.22.30.10
CH_IP_RED=172.22.40.10

# pfSense locals
PFSENSE_ADMIN_USER=admin
PFSENSE_ADMIN_PASS=ChangeMe_S0C9000!

# k3s
K3S_CHANNEL=stable
K3S_VERSION=
